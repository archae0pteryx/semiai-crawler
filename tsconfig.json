{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/tmp/**/*",
    "**/__tests__/**/*",
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
  }
}
